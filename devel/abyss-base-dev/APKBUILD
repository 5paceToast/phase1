pkgname=abyss-base-dev
pkgver=0
pkgrel=3
pkgdesc="devel metapackage"
url="https://abyss.run"
arch="noarch"
license="MIT"
options="!check"

case "$CARCH" in
	x86_64) depends_arch="llvm-binutils lld" ;;
	aarch64) depends_arch="llvm-binutils lld" ;;
	mips64) depends_arch="binutils" ;;
esac

depends="abyss-base llvm-dev clang abuild linux-dev musl-dev toolchain $depends_arch"

package() {
	mkdir -p $pkgdir
}

