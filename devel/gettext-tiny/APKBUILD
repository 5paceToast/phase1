pkgname=gettext-tiny
pkgver=0.3.1
pkgrel=0
pkgdesc="gettext-tiny"
url="https://github.com/sabotage-linux/gettext-tiny"
arch="all"
license="MIT"
depends=""
source="http://ftp.barfooze.de/pub/sabotage/tarballs/gettext-tiny-${pkgver}.tar.xz
	fix_prefix.patch"
subpackages="$pkgname-dev"
options="!check"

provides="gettext"

build() {
	cd "$builddir"
	make CC=$CC CXX=$CXX LIBINTL=musl
}

package() {
	cd "$builddir"
	make CC=$CC CXX=$CXX LIBINTL=musl DESTDIR=${pkgdir} prefix=/usr install
}

