pkgname=minio
_pkgver='RELEASE.2019-10-12T01-39-57Z'
pkgver=${_pkgver#*.}
pkgver=${pkgver%T*}
pkgver=0.${pkgver//-}
pkgrel=0
pkgdesc="An open source object storage server compatible with Amazon S3"
pkgusers="minio"
pkggroups="minio"
url="https://minio.io/"
arch="all"
license="Apache-2.0"
install="minio.pre-install"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/minio/minio/archive/$_pkgver.tar.gz
	minio.initd
	minio.confd
	"
builddir="$srcdir/$pkgname-$_pkgver"
options="net"
subpackages="$pkgname-openrc $pkgname-client"

export GOPATH="$srcdir"
export CGO_ENABLED=0

build() {
	local _ldflags=$(go run buildscripts/gen-ldflags.go 2> /dev/null)
	go build -tags kqueue --ldflags "$_ldflags" -o bin/minio
	go build -tags kqueue --ldflags "$_ldflags" -o bin/mc
}

check() {
	# cmd: disk usage errors, like same as pkg/disk
	# pkg/disk: doesn't know what btrfs is
	# pkg/s3select: fails on 32bit systems
	go test -tags kqueue $(go list ./... | grep -v \
		-e 'cmd' \
		-e pkg/disk \
		-e pkg/s3select
		)
}

package() {
	install -Dm755 "$builddir"/bin/minio \
		"$pkgdir"/usr/bin/minio
	install -Dm755 "$srcdir"/"$pkgname".initd \
		"$pkgdir"/etc/init.d/"$pkgname"
	install -Dm644 "$srcdir"/"$pkgname".confd \
		"$pkgdir"/etc/conf.d/"$pkgname"
}

client() {
	install -Dm755 "$builddir"/bin/mc "$subpkgdir"/usr/bin/mcli
}

cleanup_srcdir() {
	go clean -modcache
	default_cleanup_srcdir
}

