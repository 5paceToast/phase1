pkgname=libassuan
pkgver=2.5.3
pkgrel=2
pkgdesc="A IPC library used by some GnuPG related software"
url="https://www.gnupg.org/software/libassuan/index.html"
arch="all"
license="LGPL-2.1-or-later"
makedepends="libgpg-error-dev"
subpackages="${pkgname}-dev ${pkgname}-doc"
source="https://www.gnupg.org/ftp/gcrypt/${pkgname}/${pkgname}-${pkgver}.tar.bz2"
builddir="${srcdir}/${pkgname}-${pkgver}"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

b2sums="ae3a5a9a03e85d62cf87271cd4a0718a2b89a4f90ea814837913e4b2bb6e5af9746e766d99685cc0cc3a801efaee597e491a2bc03d42ac26059580ea4680fd7a  libassuan-2.5.3.tar.bz2"
