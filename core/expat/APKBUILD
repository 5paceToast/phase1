pkgname=expat
pkgver=2.2.9
pkgrel=0
pkgdesc="An XML Parser library written in C"
url="http://www.libexpat.org/"
arch="all"
license='MIT'
checkdepends="bash"
source="https://github.com/libexpat/libexpat/releases/download/R_${pkgver//./_}/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
	cd "$builddir"
	CC=clang CXX=clang++ ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--mandir=/usr/share/man \
		--disable-static
	make
}

check() {
	cd "$builddir"
	return 0
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir/" install
}

sha512sums="e082874efcc4b00709e2c0192c88fb15dfc4f33fc3a2b09e619b010ea93baaf7e7572683f738463db0ce2350cab3de48a0c38af6b74d1c4f5a9e311f499edab0  expat-2.2.9.tar.xz"
