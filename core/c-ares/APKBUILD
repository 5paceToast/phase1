pkgname=c-ares
pkgver=1.15.0
pkgrel=0
pkgdesc="An asynchronously DNS/names resolver library"
url="https://c-ares.haxx.se/"
arch="all"
options="!checkroot"
license="MIT"
depends=""
makedepends=""
subpackages="$pkgname-doc $pkgname-dev"
source="https://c-ares.haxx.se/download/$pkgname-$pkgver.tar.gz"

prepare() {
	default_prepare

	sed -i '/^TEST_P(MockChannelTest, HostAliasUnreadable) {$/,/^}$/d' test/ares-test-mock.cc
}

build() {
	cd "$builddir"
	PATH_SEPARATOR=: ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-shared
	make
}

check() {
	cd "$builddir"

	make -C test check
}


package() {
	cd "$builddir"
	make -j1 DESTDIR="$pkgdir" install
}

b2sums="c4028bb2840af23274b79c73600bfcf73a348c7ab63ae3c215829e0fe2cf149f4ad38a3ec657c3997bad818ced3cacaed0579dd0dd2ef42eaffd074bdc4f22ed  c-ares-1.15.0.tar.gz"
