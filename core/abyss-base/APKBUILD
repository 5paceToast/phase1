pkgname=abyss-base
pkgver=0
pkgrel=1
pkgdesc="base metapackage"
url="https://abyss.run"
arch="noarch"
license="MIT"
options="!check"

case "$CARCH" in
	x86_64) depends_arch="" ;;
	aarch64) depends_arch="" ;;
	mips64) depends_arch="" ;;
esac

depends="filesystem musl abyss-keyring apk-tools busybox ca-certificates dhcpcd openrc util-linux $depends_arch"

package() {
	mkdir -p $pkgdir
}

