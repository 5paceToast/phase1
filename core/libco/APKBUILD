pkgname="libco"
pkgver="20"
pkgrel=0
pkgdesc="libco is a cooperative multithreading library written in C89."
url="https://byuu.org/library/libco"
arch="all"
license="ISC"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver::https://github.com/canonical/libco/archive/v${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd $builddir
	make
}

package() {
	cd $builddir
	make DESTDIR=$pkgdir install
}

