pkgname="libaio"
pkgver=0.3.111
pkgrel=0
pkgdesc="Asynchronous input/output library"
url="http://lse.sourceforge.net/io/aio.html"
arch="all"
license="LGPL-2.1-or-later"
options="!check"  # No test suite.
makedepends_build=""
makedepends_host="linux-dev"
makedepends="$makedepends_build $makedepends_host"
subpackages="$pkgname-dev"
source="http://us.archive.ubuntu.com/ubuntu/pool/main/liba/$pkgname/${pkgname}_${pkgver}.orig.tar.gz"

build() {
	cd $builddir
}

package() {
	cd $builddir
	make prefix="$pkgdir/usr" \
		sysconfdir="$pkgdir/etc" \
		mandir="$pkgdir/usr/share/man" \
		infodir="$pkgdir/usr/share/info" \
		install
}

sha512sums="440f2b62f99ca2e72ffc8c2c04b4779a1a7cf24a8ba2a30b34d18b4ee77630a2078610fe8c435559f81a5c3bfa93049bd53d77464a0da8267833fbde3f40ceeb  libaio_0.3.111.orig.tar.gz"
