pkgname="abyss-keyring"
pkgver="1"
pkgrel=0
pkgdesc="Abyss OS keys"
url="https://getabyss.com"
arch="all"
license="custom"
#depends="filesystem"
source="https://mirror.getabyss.com/abyss/jwh-x86_64.rsa.pub
		https://mirror.getabyss.com/abyss/jwh-aarch64.rsa.pub"

builddir="$srcdir/"

package() {
	mkdir -p $pkgdir/usr/share/apk/keys
	cp -v $srcdir/jwh-x86_64.rsa.pub $pkgdir/usr/share/apk/keys/
	cp -v $srcdir/jwh-aarch64.rsa.pub $pkgdir/usr/share/apk/keys/
}

