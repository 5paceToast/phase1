pkgname=acl
pkgver=2.2.53
pkgrel=0
pkgdesc="Access control list utilities"
url="https://savannah.nongnu.org/projects/acl"
arch="all"
license="LGPL-2.1-or-later AND GPL-2.0-or-later"
depends="attr gettext"
makedepends="attr-dev gettext-dev"
subpackages="$pkgname-dev $pkgname-doc"
checkdepends="perl bash"
#options="!check"
source="http://download.savannah.nongnu.org/releases/acl/acl-$pkgver.tar.gz
	stupid_tests.patch"

build() {
	cd "$builddir"
	unset PLATFORM
	export OPTIMIZER="${CFLAGS}"
	export DEBUG=-DNDEBUG
	CC=$CC CXX=$CXX LDFLAGS="-lintl" CONFIG_SHELL=/bin/sh ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--libexecdir=/usr/lib
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="176b7957fe0e7618e0b7bf2ac5071f7fa29417df718cce977661a576fa184e4af9d303b591c9d556b6ba8923e799457343afa401f5a9f7ecd9022185a4e06716  acl-2.2.53.tar.gz
ec1d2315367df9c1573d6b8c7bf7b3b997bdae9f9b35b1c21eb28a56d936bdfc26df02daa32e776af8086d250d7a1069e93880aa588eae3f0c0d5584e3b28f84  stupid_tests.patch"
